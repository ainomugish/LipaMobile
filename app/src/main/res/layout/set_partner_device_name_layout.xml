<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER PARTNER DEVICE NAME"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/set_partner_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ENTER PARTNER DEVICE NAME"
        android:layout_gravity="center_horizontal" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/lipa_purple"
        android:layout_gravity="center_horizontal"
        android:text="SET PARTNER NAME"
        android:onClick="setpartnerDeviceName"
         />

    <!--CANCEL BUTTON-->
    <Button
        style="@style/cancel_buttons"
        android:text="CANCEL"
        android:onClick="cancel"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

